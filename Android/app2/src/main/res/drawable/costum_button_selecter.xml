<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<!--    이렇게 할 수도 있고-->
<!--    <item android:state_pressed="true"-->
<!--        android:drawable="@drawable/costum_button"/>-->

<!--    이렇게 할 수도 있다.-->
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="20dp"/>
            <size android:height="70dp" android:width="200dp"/>
            <stroke android:width="3dp" android:color="#1D5AB6"/>

            <gradient
                android:startColor="#fff"
                android:centerColor="#5888C3"
                android:endColor="#702AAE"
                android:gradientRadius="300dp"
                android:centerX="1"
                android:centerY="1"
                android:type="radial"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="20dp"/>
            <size android:height="70dp" android:width="200dp"/>
            <stroke android:width="3dp" android:color="#591239"/>


        </shape>
    </item>
</selector>